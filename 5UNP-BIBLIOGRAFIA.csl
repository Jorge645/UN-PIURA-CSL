<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>ISO-690 Author-Date (Español, con coma, APA-like)</title>
    <id>http://www.zotero.org/styles/iso-690-author-date-es-coma-apa</id>
    <link href="http://www.zotero.org/styles/iso-690-author-date-es-coma-apa" rel="self"/>
    <author>
      <name>Adaptado por ChatGPT</name>
    </author>
    <category citation-format="author-date"/>
    <updated>2025-07-10T00:00:00+00:00</updated>
    <summary>Estilo ISO-690 author-date en español con formato APA-like en cita (coma) y bibliografía.</summary>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">Creative Commons BY-SA 3.0</rights>
  </info>

  <macro name="author">
    <names variable="author">
      <name form="short" initialize-with=". " name-as-sort-order="all" delimiter=", " />
    </names>
  </macro>

  <macro name="issued">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="title">
    <text variable="title"/>
  </macro>

  <macro name="container">
    <group delimiter=". ">
      <text variable="container-title"/>
      <text variable="publisher"/>
      <text variable="publisher-place"/>
      <text variable="volume" prefix="vol. "/>
      <text variable="issue" prefix="n.º "/>
      <text variable="page" prefix="p. "/>
      <text variable="DOI" prefix=" DOI "/>
    </group>
  </macro>

  <citation>
    <layout prefix="(" suffix=")" delimiter=", ">
      <text macro="author"/>
      <text macro="issued"/>
    </layout>
  </citation>

  <bibliography>
    <sort>
      <key macro="author"/>
      <key macro="issued"/>
    </sort>
    <layout>
      <text macro="author" suffix=". "/>
      <group prefix="(" suffix="). ">
        <text macro="issued"/>
      </group>
      <text macro="title" suffix=". "/>
      <text macro="container" suffix=". "/>
    </layout>
  </bibliography>
</style>
